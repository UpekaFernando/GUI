<Window x:Class="shopManagementsytem2.ViewMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shopManagementsytem2"
        mc:Ignorable="d"
        Title="ViewMenu" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Left" Width="250" Background="LightGray">
                <Button Content="Choose Menu" Name="btnChooseMenu" Width="230" Margin="10" Click="btnChooseMenu_Click"/>
            </StackPanel>
            <Grid DockPanel.Dock="Right" Name="contentArea">
                <ListBox x:Name="listBoxMenus" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="400"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>